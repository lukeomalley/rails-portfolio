<h1>Portfolio</h1>

<%= link_to "Create New Item", new_project_path %>

<% @project_items.each do |project|%>
    <h3><%= project.title %></h3>
    <p><%= project.subtitle %></p>
    <p><%= project.body %></p>
    <%= image_tag project.thumb_image unless project.thumb_image.nil? %>
    <%= link_to "Edit", edit_project_path(project.id) %>
    <hr>
<%end%>